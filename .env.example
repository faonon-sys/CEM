# API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
LLM_PROVIDER=anthropic

# Database Configuration
DATABASE_URL=postgresql://reasoning_user:reasoning_pass@localhost:5432/reasoning_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=reasoning_db
DATABASE_USER=reasoning_user
DATABASE_PASSWORD=reasoning_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication & Security
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_COST_FACTOR=12

# Server Configuration
BACKEND_URL=http://localhost:8000
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=5000
API_PREFIX=/api
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# LLM Configuration
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000
LLM_RATE_LIMIT=10
LLM_TIMEOUT=60

# Feature Flags
PHASE_1_ENABLED=true
PHASE_2_ENABLED=true
PHASE_3_ENABLED=true
PHASE_5_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
DEBUG=true
